<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="billdozer.com.testxml.MainActivity"
    android:weightSum="1">

    <android.support.v4.view.ViewPager
    android:id="@+id/viewpager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <io.github.kshitij_jain.indicatorview.IndicatorView
        android:id="@+id/circle_indicator_view"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/viewpager"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        app:activeColor="#4B0082"
        app:inactiveColor="#778899"
        app:indicatorSize="6dp" />

</RelativeLayout>
